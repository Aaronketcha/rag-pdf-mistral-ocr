# Configuration des dossiers
INPUT_DIRECTORY=./input
OUTPUT_DIRECTORY=./output
ERROR_DIRECTORY=./error

# Configuration serveur
PORT=3000
HOST=0.0.0.0

# Configuration OCR Mistral (REQUIS)
MISTRAL_API_KEY=your_mistral_api_key_here
OCR_MODEL=mistral-ocr-latest
MISTRAL_API_URL=https://api.mistral.ai/v1

# Configuration Vector Store
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=smart-realization
EMBEDDING_MODEL=nomic-embed-text:latest
OLLAMA_URL=http://localhost:11434
CHUNK_SIZE=2000
CHUNK_OVERLAP=200

# Configuration Chat (REQUIS)
GEMINI_API_KEY=your_gemini_api_key_here
MAX_CONTEXT_CHUNKS=5
MAX_RESPONSE_TIME=5000

# Configuration Redis/Bull
REDIS_URL=redis://localhost:6379

# Configuration logging
LOG_LEVEL=info
LOG_FORMAT=json

# Configuration retry
MAX_RETRIES=3
RETRY_DELAY=1000

# Configuration performance
MAX_FILE_SIZE=52428800
CONCURRENT_PROCESSING=3

# Configuration notifications (optionnel)
NOTIFICATION_WEBHOOK=
ADMIN_EMAIL=